{
  "name": "@softonic/hapi-axios-errors",
  "version": "1.0.0",
  "author": "Rub√©n Norte <ruben.norte@softonic.com>",
  "description": "Hapi plugin to convert unhandled axios errors into boom errors",
  "keywords": [
    "hapi",
    "axios",
    "error",
    "boom",
    "normalize",
    "map"
  ],
  "license": "Apache-2.0",
  "main": "index.js",
  "files": [
    "es",
    "lib",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint es/",
    "pretest": "npm run lint",
    "test": "jest",
    "tdd": "jest --watch",
    "prebuild": "npm run test",
    "build": "rm -rf lib && babel es -d lib --source-maps",
    "prerelease": "npm run build",
    "release": "npm version -m \"New version: %s\"",
    "postrelease": "npm run push && npm publish",
    "push": "git push origin master && git push origin --tags"
  },
  "dependencies": {},
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.7.2",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "hapi": "^16.6.2",
    "jest": "^21.2.1"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.jsx?$"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/softonic-development/hapi-axios-errors.git"
  },
  "homepage": "https://bitbucket.org/softonic-development/hapi-axios-errors#readme"
}
